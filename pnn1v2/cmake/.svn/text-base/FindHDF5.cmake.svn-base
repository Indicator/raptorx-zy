#
# this module look for HDF5 support
# it will define the following values
#
# HDF5_INCLUDE_DIR = where matrix3.h can be found
# HDF5_LIBRARY     = the library to link against libHDF5.a
# FOUND_HDF5       = set to 1 if HDF5 is found
#

FIND_LIBRARY(HDF5_LIBRARY hdf5  ${CMAKE_PREFIX_PATH}/lib )
FIND_PATH(HDF5_LIBRARY_DIRS libhdf5.a ${CMAKE_PREFIX_PATH}/lib )
FIND_PATH(HDF5_INCLUDE_DIR hdf5.h ${CMAKE_PREFIX_PATH}/include )

IF(HDF5_INCLUDE_DIR AND HDF5_LIBRARY)
  SET(HDF5_FOUND 1 CACHE BOOL "Found HDF5 library")
ELSE(HDF5_INCLUDE_DIR AND HDF5_LIBRARY)
  SET(HDF5_FOUND 0 CACHE BOOL "Not found HDF5 library")
ENDIF(HDF5_INCLUDE_DIR AND HDF5_LIBRARY)

MARK_AS_ADVANCED(
  HDF5_INCLUDE_DIR 
  HDF5_LIBRARY 
  HDF5_LIBRARY_DIRS 
  HDF5_FOUND
)
